{
    "name": "GiveMeCredit",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "A monetary system where trust has to be earned, and value has to proven",
    "homepage_url": "http://www.givemecredit.org",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "Wallet",
        "default_popup": "html/wallet.html"
    },
    "permissions": [
    "tabs", "<all_urls>", "background", "storage",
    "https://givemecredit.firebaseio.com/*"
  ],
    "content_security_policy": "script-src 'self' https://*.firebase.com https://*.firebaseio.com; object-src 'self'",
    "web_accessible_resources": [
        "fonts/fontawesome-webfont.woff2",
       "images/close.png",
       "images/profileicon.png",
       "images/profile.png",
       "images/key.png",
       "images/bold.png",
       "images/break.png",
       "images/bullet.png",
       "images/expand.png",
        "images/href.png",
        "images/html.png",
        "images/italic.png",
        "images/left-col-bg.gif",
        "images/profilepic.jpg",
        "images/toolbar.png",
        "images/underline.png",
        "images/widget-loader.gif"
     ],
    "background": {
        "scripts": [
        "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
        "<all_urls>"
      ],
            "css": [
        "css/reset.css",
        "css/font-awesome.min.css",
        "css/toolbar.css",
        "css/widget.css"
      ],
            "js": [
        "js/lib/firebase.js",
        "js/lib/jquery-2.2.1.min.js",
        "js/lib/jquery.initialize.js",
        "js/lib/jsrsasign-latest-all-min.js",
        "js/lib/jquery.rateyo.min.js",
        "js/lib/jquery.classyedit.js",
        "js/lib/mustache.js",
        "js/db.js",
        "js/tables.js",
        "js/main.js",
        "js/toolbar.js",
        "js/widget.js",
        "js/give.js",
        "js/images.js",
        "js/vote.js",
        "js/keys.js",
        "js/getVanityKeys.js"
      ]
    }
    ]
}